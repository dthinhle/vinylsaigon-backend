<div class="flex flex-col items-center justify-center min-h-screen">
  <div class="mb-8">
    <div class="w-auto h-32 flex items-center justify-center p-4">
      <%= image_tag "logo.svg", alt: STORE_CONFIG[:name], class: "h-full" %>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'w-full max-w-lg bg-white p-4 rounded-md shadow flex flex-col' }) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, class: "block text-xs font-normal text-gray-700 mb-2" do %>
        New Password <span class="text-red-500">*</span>
      <% end %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500 mb-1 block">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full text-sm px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-gray-400" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-xs font-normal text-gray-700 mb-2" do %>
        Confirm New Password <span class="text-red-500">*</span>
      <% end %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full text-sm px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-gray-400" %>
    </div>

    <div>
      <%= f.submit "Change my password", class: "w-full text-sm bg-gray-950 hover:bg-gray-800 text-white font-medium py-3 px-4 rounded transition-colors cursor-pointer" %>
    </div>
  <% end %>
</div>
