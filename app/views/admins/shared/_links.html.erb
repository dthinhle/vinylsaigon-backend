<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "block w-full text-center text-gray-950 font-medium bg-sky-50 hover:bg-sky-100 hover:text-sky-800 focus:bg-sky-100 focus:text-sky-800 rounded px-4 py-2 transition duration-150 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-offset-2" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "block w-full text-center text-green-700 font-medium bg-green-50 hover:bg-green-100 hover:text-green-800 focus:bg-green-100 focus:text-green-800 rounded px-4 py-2 transition duration-150 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block w-full text-center text-amber-700 font-medium bg-amber-50 hover:bg-amber-100 hover:text-amber-800 focus:bg-amber-100 focus:text-amber-800 rounded px-4 py-2 transition duration-150 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:ring-offset-2" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "block w-full text-center text-purple-700 font-medium bg-purple-50 hover:bg-purple-100 hover:text-purple-800 focus:bg-purple-100 focus:text-purple-800 rounded px-4 py-2 transition duration-150 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "block w-full text-center text-red-700 font-medium bg-red-50 hover:bg-red-100 hover:text-red-800 focus:bg-red-100 focus:text-red-800 rounded px-4 py-2 transition duration-150 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-sky-600 hover:bg-sky-700 text-white hover:text-sky-100 font-semibold py-1.5 px-3 rounded transition duration-150 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-offset-2 mt-2" %>
    <% end %>
  <% end %>
</div>
