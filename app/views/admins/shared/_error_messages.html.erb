<% if flash[:alert].present? || flash[:error].present? %>
  <% error_messages = [flash[:alert], flash[:error]].compact %>
  <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4 rounded" role="alert" aria-live="polite">
    <ul class="text-sm text-red-700 list-none">
      <% error_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
