<div data-controller="menu-modal menu-item-edit menu-form menu-sortable" class="fixed inset-0 z-50 hidden overflow-y-auto" id="menu-item-edit-modal" role="dialog" aria-modal="true" aria-labelledby="menu-item-edit-title" data-menu-item-edit-target="modal">
  <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" data-action="click->menu-item-edit#closeModal"></div>
  <div class="relative min-h-screen flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-lg mx-auto transform transition-all">
  <% form_url = item.persisted? ? admin_menu_bar_item_path(item) : admin_menu_bar_items_path %>
  <% form_method = item.persisted? ? :patch : :post %>
  <%= form_with(model: item, url: form_url, method: form_method, data: { turbo: true }, html: { class: "space-y-6", "data-readonly-param": "" }) do |f| %>
    <div class="bg-white p-4 border-b border-gray-200 rounded-t-lg flex justify-between items-center">
      <h2 id="menu-item-edit-title" class="text-lg font-medium text-gray-900">Edit Menu Item</h2>
      <button type="button"
              data-action="click->menu-item-edit#closeModal"
              class="text-gray-400 hover:text-gray-500 focus:outline-none">
        <span class="material-icons">close</span>
      </button>
    </div>

    <div class="bg-white p-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Basic Information</h3>

      <div class="space-y-4">
        <%= f.hidden_field :menu_bar_section_id, value: item.menu_bar_section_id %>
        <%= render partial: "admin/menus/menu_item_fields", locals: { f: f, menu: item.menu_bar_section, parent_select_options: { data: { action: "change->menu-item-edit#onParentChange", "menu-item-edit-target": "parentSelect" } } } %>
        <div class="mt-2" data-menu-item-edit-target="parentIndicator">
        </div>
      </div>
    </div>

    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse rounded-b-lg">
      <button type="button"
        data-action="menu-form#submit"
        class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-sky-600 text-base font-medium text-white hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 sm:ml-3 sm:w-auto sm:text-sm"
      >
        Save Changes
      </button>
    <button type="button"
      data-action="menu-item-edit#closeModal"
                  class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>