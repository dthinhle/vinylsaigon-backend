<div class="w-full max-w-full">
  <div class="mb-4 flex items-center justify-between">
    <h1 class="text-2xl font-semibold">System Config</h1>
    <div class="flex items-center gap-2">
      <%= link_to "Back", admin_system_configs_path, class: "btn btn-secondary text-sm px-3 py-1" %>
      <%= link_to "Edit", edit_admin_system_config_path(@system_config), class: "btn btn-primary text-sm px-3 py-1" %>
    </div>
  </div>

  <div class="bg-white p-4 border border-gray-200 rounded-lg">
    <dl class="grid grid-cols-1 gap-4 text-sm">
      <div class="flex flex-col">
        <dt class="text-xs text-gray-500">Name</dt>
        <dd class="mt-1 text-gray-900 font-medium"><%= @system_config.name %></dd>
      </div>

      <div class="flex flex-col">
        <dt class="text-xs text-gray-500">Value</dt>
        <dd class="mt-1 text-gray-900 font-medium"><%= @system_config.value %></dd>
      </div>

      <div class="flex flex-col">
        <dt class="text-xs text-gray-500">Created At</dt>
        <dd class="mt-1 text-gray-700"><%= @system_config.created_at.strftime("%H:%M:%S %d-%m-%Y") %></dd>
      </div>

      <div class="flex flex-col">
        <dt class="text-xs text-gray-500">Updated At</dt>
        <dd class="mt-1 text-gray-700"><%= @system_config.updated_at.strftime("%H:%M:%S %d-%m-%Y") %></dd>
      </div>
    </dl>
  </div>
</div>
