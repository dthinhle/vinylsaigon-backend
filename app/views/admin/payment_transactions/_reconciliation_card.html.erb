<% mismatch = payment_transaction_mismatch_messages(txn) %>
<% if mismatch.any? %>
  <div class="rounded-lg border border-amber-300 bg-amber-50 p-4 space-y-2">
    <h3 class="font-semibold text-sm flex items-center gap-2">
      <span class="material-icons text-amber-600 text-base">warning</span>
      Reconciliation
    </h3>
    <ul class="list-disc pl-5 text-xs text-amber-900 space-y-1">
      <% mismatch.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
