<div class="rounded-lg border border-gray-200 bg-white p-4 space-y-2">
  <div class="flex items-center justify-between">
    <h3 class="font-semibold text-sm">Order</h3>
    <% if txn.fully_free_installment_order? %>
      <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 text-green-800">Free Installment Fee</span>
    <% elsif txn.has_free_installment_product? %>
      <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">Mixed Fee</span>
    <% end %>
  </div>
  <div class="text-sm space-y-1">
    <div><span class="text-gray-500">Order Number:</span> <%= link_to txn.order.order_number, admin_order_path(txn.order), class: 'text-sky-600 hover:text-sky-900 font-medium' %></div>
    <div><span class="text-gray-500">Payment Status:</span> <span class="font-medium"><%= txn.order.payment_status.titleize %></span></div>
    <div><span class="text-gray-500">Order Status:</span> <span class="font-medium"><%= txn.order.status.titleize %></span></div>
    <div><span class="text-gray-500">Total:</span> <span class="font-medium"><%= format_vnd_currency(txn.order.total_vnd) %></span></div>
    <div><span class="text-gray-500">Method:</span> <span class="font-medium"><%= txn.order.installment_payment? ? 'Installment' : txn.order.payment_method.presence || 'â€”' %></span></div>
  </div>
</div>
