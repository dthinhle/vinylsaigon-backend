<%= form_with(model: menu_bar_section, url: menu_bar_section.persisted? ? admin_menu_bar_section_path(menu_bar_section) : admin_menu_bar_sections_path, method: menu_bar_section.persisted? ? :patch : :post, data: { turbo: true }, class: "space-y-6") do |f| %>
  <% if menu_bar_section.errors.any? %>
    <div class="mb-4 rounded bg-red-50 border border-red-200 p-4 text-red-700">
      <h2 class="font-semibold mb-2">Errors:</h2>
      <ul class="list-disc pl-5 text-sm">
        <% menu_bar_section.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :section_type, "Section Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :section_type, options_for_select([["Left", "left"], ["Main", "main"], ["Right", "right"]], menu_bar_section.section_type), {}, class: "select select-bordered w-full px-3 py-2 rounded border border-gray-300 focus:ring-2 focus:ring-sky-500" %>
  </div>
  <div class="flex gap-2 mt-6">
    <%= f.submit menu_bar_section.persisted? ? "Update Section" : "Create Section", class: "btn btn-primary px-4 py-2 rounded bg-sky-600 text-white hover:bg-sky-700 transition text-sm" %>
  </div>
<% end %>