<div class="flex flex-col gap-4">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold">Menu Bar Sections</h1>
      <nav class="text-sm breadcrumbs mt-1">
        <ol class="inline-flex items-center space-x-1">
          <li><a href="/admin" class="text-gray-500 hover:text-gray-700">Admin</a></li>
          <li>/</li>
          <li class="text-gray-900">Menu Bar Sections</li>
        </ol>
      </nav>
    </div>
    <%= link_to "Create Section", new_admin_menu_bar_section_path, class: "btn btn-primary px-3 py-1.5 rounded bg-sky-600 text-white hover:bg-sky-700 transition text-sm flex self-end" %>
  </div>

  <div class="overflow-x-auto w-full border border-gray-200 rounded-lg">
    <table class="w-full max-w-full divide-y divide-gray-200 table-auto">
      <thead class="bg-gray-50">
        <tr>
          <th class="p-2 text-left text-xs font-semibold text-gray-700">Section Type</th>
          <th class="p-2 text-left text-xs font-semibold text-gray-700">Created At</th>
          <th class="p-2 text-right text-xs font-semibold text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% if @menu_bar_sections.empty? %>
          <tr>
            <td colspan="3" class="py-12 text-center text-gray-500">No sections found.</td>
          </tr>
        <% else %>
          <% @menu_bar_sections.each do |section| %>
            <tr class="hover:bg-gray-50 text-sm" data-section-id="<%= section.id %>">
              <td class="p-2 font-medium text-gray-900"><%= section.section_type.titleize %></td>
              <td class="p-2 text-gray-700"><%= format_datetime(section.created_at) %></td>
              <td class="p-2 text-right">
                <div class="flex gap-2 justify-end">
                  <%= render_action_button(admin_menu_bar_section_path(section), icon: 'visibility', type: :show) %>
                  <%= render_action_button(edit_admin_menu_bar_section_path(section), icon: 'edit', type: :edit) %>
                  <%= render_action_button(admin_menu_bar_section_path(section), icon: 'delete', type: :delete, confirm_message: 'Are you sure you want to delete this section?') %>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
