<div class="flex flex-col gap-4" data-section-id="<%= @menu_bar_section.id %>">
  <div>
    <h1 class="text-2xl font-bold">Menu Bar Section: <%= @menu_bar_section.section_type.titleize %></h1>
    <nav class="text-sm breadcrumbs mt-1">
      <ol class="inline-flex items-center space-x-1">
        <li><a href="/admin" class="text-gray-500 hover:text-gray-700">Admin</a></li>
        <li>/</li>
        <li><a href="<%= admin_menu_bar_sections_path %>" class="text-gray-500 hover:text-gray-700">Menu Bar Sections</a></li>
        <li>/</li>
        <li class="text-gray-900"><%= @menu_bar_section.section_type.titleize %></li>
      </ol>
    </nav>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Section Type</dt>
        <dd class="mt-1 text-lg text-gray-900"><%= @menu_bar_section.section_type.titleize %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Created At</dt>
        <dd class="mt-1 text-lg text-gray-900"><%= @menu_bar_section.created_at.strftime("%d/%m/%Y %H:%M") %></dd>
      </div>
    </dl>
    <div class="mt-6 flex gap-2">
      <%= link_to "Edit", edit_admin_menu_bar_section_path(@menu_bar_section), class: "btn btn-xs border border-gray-100 text-gray-700 hover:border-gray-200 hover:text-gray-900 px-2 py-1 rounded" %>
      <%= link_to "Back", admin_menu_bar_sections_path, class: "btn btn-xs border border-gray-100 text-gray-700 hover:border-gray-200 hover:text-gray-900 px-2 py-1 rounded" %>
      <%= button_to admin_menu_bar_section_path(@menu_bar_section), method: :delete, data: { controller: "confirm", confirm_message_value: "Are you sure you want to delete this section?" }, class: "btn btn-xs border border-red-100 text-red-700 hover:border-red-200 px-2 py-1 rounded" do %>
        Delete
      <% end %>
    </div>
  </div>
</div>