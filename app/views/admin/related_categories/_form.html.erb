<%= form_with(model: [:admin, related_category], local: true, data: { controller: "related-categories-form" }, html: { class: "w-[min(var(--container-xl),100vw)] mx-auto rounded-lg border border-gray-200 bg-white overflow-y-hidden" }) do |f| %>
  <div class="title-wrapper gap-4 w-full flex flex-row items-center justify-between py-4 border-b border-gray-200 z-50 px-4">
    <div class="left-section flex items-center gap-2">
      <%= link_to admin_related_categories_path, class: "btn btn-secondary bg-white border border-gray-200 hover:bg-gray-100 rounded-lg" do %>
        <span class="material-icons px-2 py-1 text-gray-950 text-base!">chevron_left</span>
      <% end %>
      <h1 class="text-2xl font-bold">
        <% if related_category.persisted? %>
          Edit Relationship
        <% else %>
          Create Relationship
        <% end %>
      </h1>
    </div>
    <%= f.button class: "btn btn-primary text-sm px-4 py-2 rounded bg-gray-950 hover:bg-gray-700 flex items-center transition cursor-pointer", data: { turbo: false } do %>
      <span class="material-icons text-white text-base! mr-2 -ml-1">check_circle</span>
      <span class="text-white">Save</span>
    <% end %>
  </div>

  <div class="bg-white p-4 space-y-4 overflow-y-auto">
    <% if related_category.errors.any? %>
      <div id="error_explanation" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
        <h2 class="font-medium"><%= pluralize(related_category.errors.count, "error") %> prohibited this relationship from being saved:</h2>
        <ul class="mt-2 list-disc list-inside text-sm">
          <% related_category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :category_id,
          Category.order(title: :asc),
          :id,
          :title,
          { prompt: "Select category" },
          {
            class: "select select-bordered w-full pl-1.5 pr-3 py-2.25 rounded border border-gray-300 focus:ring-2 focus:ring-sky-500 #{'border-red-500' if related_category.errors[:category_id].any?}",
            data: { "related-categories-form-target": "categorySelect" }
          } %>
      <% if related_category.errors[:category_id].any? %>
        <div class="text-red-600 text-xs mt-1" role="alert"><%= related_category.errors[:category_id].first %></div>
      <% end %>
    </div>

    <div>
      <%= f.label :related_category_id, "Related Category", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :related_category_id,
          Category.order(title: :asc),
          :id,
          :title,
          { prompt: "Select related category" },
          {
            class: "select select-bordered w-full pl-1.5 pr-3 py-2.25 rounded border border-gray-300 focus:ring-2 focus:ring-sky-500 #{'border-red-500' if related_category.errors[:related_category_id].any?}",
            data: { "related-categories-form-target": "relatedCategorySelect" }
          } %>
      <% if related_category.errors[:related_category_id].any? %>
        <div class="text-red-600 text-xs mt-1" role="alert"><%= related_category.errors[:related_category_id].first %></div>
      <% end %>
    </div>

    <div>
      <%= f.label :weight, "Relationship Weight", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :weight,
          options_for_select((0..10).map { |w| [w, w] }, related_category.weight),
          { prompt: "Select weight (0-10)" },
          {
            class: "select select-bordered w-full md:w-1/3 pl-1.5 pr-3 py-2.25 rounded border border-gray-300 focus:ring-2 focus:ring-sky-500 #{'border-red-500' if related_category.errors[:weight].any?}",
            data: { "related-categories-form-target": "weightSelect" }
          } %>
      <div class="text-xs text-gray-500 mt-1">
        <strong>Weight Guide:</strong>
        0-2: Low compatibility â€¢
        3-4: Medium compatibility â€¢
        5-7: High compatibility â€¢
        8-10: Essential/Perfect match
      </div>
      <% if related_category.errors[:weight].any? %>
        <div class="text-red-600 text-xs mt-1" role="alert"><%= related_category.errors[:weight].first %></div>
      <% end %>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <h3 class="font-medium text-blue-900 mb-2">ðŸ“‹ Relationship Information</h3>
      <ul class="text-sm text-blue-800 space-y-1">
        <li>â€¢ This relationship will be created in <strong>both directions</strong> automatically</li>
        <li>â€¢ Both categories will be related to each other with the same weight</li>
        <li>â€¢ Choose weight based on real-world audio equipment compatibility</li>
        <li>â€¢ Higher weights make products more likely to appear in related recommendations</li>
      </ul>
    </div>
  </div>
<% end %>
