<div class="flex flex-col gap-4" data-controller="related-categories-index">
  <%= render 'admin/shared/page_header',
    title: 'Related Categories',
    button_text: 'Create Relationship',
    button_path: new_admin_related_category_path %>

  <div class="filter-wrapper w-full bg-white p-4 border border-gray-200 rounded-lg grid gap-4">
    <%= render_filter_chips(
      filter_params: @filter_params,
      filter_labels: @filter_labels,
      clear_path: admin_related_categories_path
    ) %>

    <div class="w-full max-w-full">
      <%= form_with url: admin_related_categories_path, method: :get, local: true, class: "flex flex-col md:flex-row md:items-end gap-2 md:gap-4 w-full max-w-full", data: { controller: "related-categories-index" } do |f| %>
        <div class="flex flex-col md:flex-row gap-2 md:gap-4 flex-1">
          <div class="flex flex-col">
            <input id="q" type="search" name="q" value="<%= params[:q] %>" placeholder="Search categories..." class="input input-bordered text-sm w-full max-w-full px-3 py-2 rounded border border-gray-300 focus:ring-2 focus:ring-sky-500" data-related-categories-index-target="q" autocomplete="off">
          </div>
          <div class="flex flex-col">
            <select id="category_id" name="category_id" class="select select-bordered text-sm px-3 py-[0.575rem] rounded border border-gray-300" data-related-categories-index-target="categoryId">
              <option value="">All Categories</option>
              <% Category.order(title: :asc).each do |cat| %>
                <option value="<%= cat.id %>" <%= "selected" if params[:category_id].to_s == cat.id.to_s %>><%= cat.title %></option>
              <% end %>
            </select>
          </div>
          <div class="flex flex-col">
            <select id="weight" name="weight" class="select select-bordered text-sm px-3 py-[0.575rem] rounded border border-gray-300" data-related-categories-index-target="weight">
              <option value="">All Weights</option>
              <% (0..10).each do |w| %>
                <option value="<%= w %>" <%= "selected" if params[:weight].to_s == w.to_s %>><%= w %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="flex flex-col justify-end">
          <button type="submit" class="btn btn-secondary text-sm px-3 py-2 rounded bg-gray-950 text-gray-50 hover:bg-gray-700 cursor-pointer">Filter</button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-between items-end">
    <span class="text-sm text-gray-500">Total: <%= @pagy&.count %></span>
    <%== @pagy.series_nav if @pagy %>
  </div>

  <%= render "admin/related_categories/related_category_list", related_categories: @related_categories, pagy: @pagy, show_actions: true %>
</div>
