<tr class="hover:bg-gray-50 text-sm">
  <td class="px-4 py-2 text-left">
    <%= check_box_tag "customer_ids[]", customer.id, false,
      class: "accent-gray-700",
      data: {
        action: "change->customers-index#selectRow",
        customers_index_target: "rowCheckbox"
      },
      value: customer.id %>
  </td>
  <td class="p-2 font-medium text-gray-900">
    <%= link_to customer.email, admin_customer_path(customer), class: "hover:underline" %>
  </td>
  <td class="p-2 text-gray-700"><%= customer.name || 'N/A' %></td>
  <td class="p-2 text-gray-700"><%= customer.phone_number || 'N/A' %></td>
  <td class="p-2"><%= customer_status_badge(customer) %></td>
  <td class="p-2 text-gray-700"><%= format_datetime(customer.created_at) %></td>
  <td class="p-2 text-gray-700"><%= format_datetime(customer.updated_at) %></td>
  <td class="p-2 max-w-[180px] text-sm text-right">
    <div class="button-wrapper h-full flex gap-2 justify-end">
      <%= render_action_button(edit_admin_customer_path(customer), icon: 'edit', type: :edit) %>
      <%= render_action_button(admin_customer_path(customer), icon: 'delete', type: :delete, confirm_message: 'Are you sure you want to delete this customer?') %>
    </div>
  </td>
</tr>
