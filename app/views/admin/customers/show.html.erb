<div class="flex flex-col gap-4">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold">Customer Details</h1>
      <nav class="text-sm breadcrumbs mt-1">
        <ol class="inline-flex items-center space-x-1">
          <li><%= link_to "Admin", admin_dashboard_path, class: "text-gray-500 hover:text-gray-700" %></li>
          <li>/</li>
          <li><%= link_to "Customers", admin_customers_path, class: "text-gray-500 hover:text-gray-700" %></li>
          <li>/</li>
          <li class="text-gray-900"><%= @customer.email %></li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="max-w-screen-2xl mx-auto space-y-4 mb-2">
    <div class="max-w-screen-2xl mx-auto rounded-lg border border-gray-200 bg-white">
      <div class="title-wrapper gap-4 w-full flex flex-row items-center justify-between py-4 border-b border-gray-200 z-50 px-4">
        <div class="flex items-center gap-4">
          <%= link_to admin_customers_path, class: "btn btn-secondary bg-white border border-gray-200 hover:bg-gray-100 rounded-lg" do %>
            <span class="material-icons px-2 py-1 text-gray-950 text-base!">chevron_left</span>
          <% end %>
          <h1 class="text-2xl font-bold"><%= @customer.name.present? ? @customer.name : @customer.email %></h1>
        </div>
        <div class="flex gap-2">
          <%= link_to edit_admin_customer_path(@customer), class: "bg-gray-950 hover:bg-gray-700 text-white text-sm font-semibold py-2 px-4 rounded transition-colors flex flex-row items-center gap-2" do %>
            <span class="material-icons text-white text-base! mr-2 -ml-1">edit</span>
            <span>Edit</span>
          <% end %>

          <%= button_to admin_customer_path(@customer),
            method: :delete,
            form: { "data-controller": "confirm", "data-confirm-message-value": "Are you sure you want to delete this customer?" },
            class: "bg-red-600 hover:bg-red-700 text-white text-sm font-semibold py-2 px-4 rounded transition-colors flex flex-row items-center gap-2 cursor-pointer" do %>
            <span class="material-icons text-white text-base! -mx-1">delete</span>
          <% end %>
        </div>
      </div>

      <div class="p-4 space-y-4">
        <div class="space-y-4">
          <h3 class="font-medium text-gray-900">Customer Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">Email</label>
                <div class="mt-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm text-gray-900">
                  <%= @customer.email %>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Name</label>
                <div class="mt-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm text-gray-900">
                  <%= @customer.name.present? ? @customer.name : "-" %>
                </div>
              </div>
            </div>
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">Phone Number</label>
                <div class="mt-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm text-gray-900">
                  <%= @customer.phone_number.present? ? @customer.phone_number : "-" %>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Status</label>
                <div class="mt-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm">
                  <%= customer_status_badge(@customer) %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="pt-6 border-t border-gray-200 space-y-4">
          <h3 class="font-medium text-gray-900">Account Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div>
              <span class="text-gray-600">Created:</span>
              <span class="font-medium block text-gray-900"><%= @customer.created_at.strftime("%d/%m/%Y %H:%M") %></span>
            </div>
            <div>
              <span class="text-gray-600">Last Updated:</span>
              <span class="font-medium block text-gray-900"><%= @customer.updated_at.strftime("%d/%m/%Y %H:%M") %></span>
            </div>
          </div>
        </div>

        <div class="pt-6 border-t border-gray-200 space-y-4">
          <h3 class="font-medium text-gray-900">Password Reset Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">Reset Token Status</label>
              <div class="mt-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm">
                <% if @customer.reset_password_token.present? %>
                  <span class="inline-block px-2 py-1 text-xs rounded bg-amber-100 text-amber-800">Token Active</span>
                <% else %>
                  <span class="inline-block px-2 py-1 text-xs rounded bg-gray-100 text-gray-700">No Active Token</span>
                <% end %>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Reset Email Sent At</label>
              <div class="mt-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm text-gray-900">
                <%= @customer.reset_password_sent_at&.strftime("%d/%m/%Y %H:%M") || "-" %>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Remember Token Created</label>
              <div class="mt-1 px-3 py-2 bg-gray-50 border border-gray-200 rounded text-sm text-gray-900">
                <%= @customer.remember_created_at&.strftime("%d/%m/%Y %H:%M") || "-" %>
              </div>
            </div>
          </div>
        </div>

        <div class="pt-6 border-t border-gray-200 space-y-4">
          <div class="flex items-center justify-between">
            <h3 class="font-medium text-gray-900">Logged in Devices</h3>
            <span class="text-xs text-gray-500"><%= @refresh_tokens.count %> active session(s)</span>
          </div>
          <% if @refresh_tokens.any? %>
            <div class="grid grid-cols-1 gap-4">
              <% @refresh_tokens.each do |token| %>
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                  <div class="flex items-start justify-between">
                    <div class="flex items-start gap-3">
                      <span class="material-icons text-gray-600 text-xl">
                        <%= device_icon(token.device_type) %>
                      </span>
                      <div>
                        <div class="text-sm font-medium text-gray-900"><%= token.friendly_device_info %></div>
                        <div class="text-xs text-gray-600 mt-1">
                          <% if token.token_ip.present? %>
                            <span>IP: <%= token.token_ip %></span>
                            <span class="mx-1">â€¢</span>
                          <% end %>
                          <span>Last used: <%= time_ago_in_words(token.last_used_at) %> ago</span>
                        </div>
                        <div class="text-xs text-gray-500 mt-1">
                          Expires: <%= token.expires_at.strftime("%d/%m/%Y %H:%M") %>
                        </div>
                      </div>
                    </div>
                    <%= button_to admin_customer_path(@customer),
                      method: :delete,
                      params: { refresh_token_id: token.id },
                      form: { "data-controller": "confirm", "data-confirm-message-value": "Revoke this device session?" },
                      class: "text-red-600 hover:text-red-800 cursor-pointer" do %>
                      <span class="material-icons text-base">logout</span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 text-gray-500 text-sm">
              No active sessions
            </div>
          <% end %>
        </div>

        <div class="pt-6 border-t border-gray-200 space-y-4">
          <h3 class="font-medium text-gray-900">Quick Actions</h3>
          <div class="flex flex-wrap gap-3">
            <%= button_to "Send Password Reset", send_password_reset_admin_customer_path(@customer),
              method: :post,
              form: { "data-controller": "confirm", "data-confirm-message-value": "Send password reset email to #{h(@customer.email)}?" },
              class: "bg-gray-950 hover:bg-gray-700 text-white text-sm font-semibold py-2 px-4 rounded transition-colors cursor-pointer" %>

            <% if @customer.disabled? %>
              <%= button_to "Activate Customer", admin_customer_path(@customer),
                method: :patch,
                params: { customer: { disabled: false } },
                form: { "data-controller": "confirm", "data-confirm-message-value": "Activate this customer account?" },
                class: "bg-green-600 hover:bg-green-700 text-white text-sm font-semibold py-2 px-4 rounded transition-colors cursor-pointer" %>
            <% else %>
              <%= button_to "Disable Customer", admin_customer_path(@customer),
                method: :patch,
                params: { customer: { disabled: true } },
                form: { "data-controller": "confirm", "data-confirm-message-value": "Disable this customer account?" },
                class: "bg-orange-600 hover:bg-orange-700 text-white text-sm font-semibold py-2 px-4 rounded transition-colors cursor-pointer" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
