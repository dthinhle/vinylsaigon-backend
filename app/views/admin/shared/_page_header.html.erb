<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
  <div>
    <h1 class="text-2xl font-bold"><%= title %></h1>
    <nav class="text-sm breadcrumbs mt-1">
      <ol class="inline-flex items-center space-x-1">
        <li><%= link_to "Admin", admin_dashboard_path, class: "text-gray-500 hover:text-gray-700" %></li>
        <li>/</li>
        <li class="text-gray-900"><%= title %></li>
      </ol>
    </nav>
  </div>
  <% if defined?(button_text) && button_text.present? %>
    <%= link_to button_path, class: "btn btn-primary text-sm px-4 py-2 rounded bg-gray-950 hover:bg-gray-700 flex items-center transition cursor-pointer", data: { turbo: false } do %>
      <span class="material-icons text-white text-base! mr-2 -ml-1">add_circle</span>
      <span class="text-white"><%= button_text %></span>
    <% end %>
  <% end %>
</div>
