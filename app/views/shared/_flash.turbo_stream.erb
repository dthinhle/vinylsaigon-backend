<% if notice.present? %>
  <turbo-stream action="replace" target="flash">
    <template>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-2" role="alert">
        <%= notice %>
      </div>
    </template>
  </turbo-stream>
<% end %>
<% if alert.present? %>
  <turbo-stream action="replace" target="flash">
    <template>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-2" role="alert">
        <%= alert %>
      </div>
    </template>
  </turbo-stream>
<% end %>